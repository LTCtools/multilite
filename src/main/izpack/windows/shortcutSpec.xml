<shortcuts> 
   <programGroup defaultName="MultiLite" location="applications"/> 
   <shortcut name="MultiLite" 
             target="$INSTALL_PATH/multilite.exe" 
             description="MultiLite" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multilite.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall MultiLite ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MultiLite" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>